<Shell x:Class="Geoportal.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:Geoportal.Pages" 
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False"
       Shell.BackgroundColor="#0A56C4"
       Shell.ForegroundColor="{AppThemeBinding Light=#0A56C4, Dark=White}"
       Shell.TitleColor="{AppThemeBinding Light=#0A56C4, Dark=White}"
       Shell.UnselectedColor="{AppThemeBinding Light=Gray, Dark=#888888}"
       Shell.TabBarBackgroundColor="{AppThemeBinding Light=White, Dark=#1F1F1F}">

    <TabBar>
        <Tab Title="Главная" Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:DashboardPage}" />
        </Tab>

        <Tab Title="Репорты" Icon="report_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ReportsPage}" />
        </Tab>

        <Tab Title="Сканер" Icon="qr_scanner_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ScannerPage}" />
        </Tab>

        <Tab Title="Сравнение" Icon="compare_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ComparePage}" />
        </Tab>

        <Tab Title="Настройки" Icon="settings_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>