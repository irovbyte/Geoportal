<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lang="clr-namespace:Geoportal.Resources.Languages"
             x:Class="GeoportalApp.Pages.LoginPage"
             Shell.NavBarIsVisible="False">

    <Grid>
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0A56C4" Offset="0.1" />
                    <GradientStop Color="#3AB0C2" Offset="0.5" />
                    <GradientStop Color="#3FE543" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView VerticalOptions="Center" HorizontalOptions="Fill">
            <VerticalStackLayout Spacing="0" 
                                 Padding="25" 
                                 WidthRequest="480" 
                                 MaximumWidthRequest="600" 
                                 HorizontalOptions="Center">

                <Border StrokeShape="RoundRectangle 40" 
                        BackgroundColor="{AppThemeBinding Light=#CCFFFFFF, Dark=#CC1F1F1F}" 
                        StrokeThickness="0"
                        Padding="35"
                        HorizontalOptions="Fill">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,20" Opacity="0.3" Radius="30" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="20">

                        <Border StrokeShape="RoundRectangle 50" 
                                HeightRequest="100" 
                                WidthRequest="100"
                                HorizontalOptions="Center"
                                Margin="0,0,0,10"
                                BackgroundColor="White"
                                StrokeThickness="2"
                                Stroke="{StaticResource Gray200}">
                            <Image Source="logo_login.png" Aspect="AspectFill" Margin="2"/>
                        </Border>

                        <Label x:Name="TitleLabel" 
                               Text="{x:Static lang:AppResources.LoginTitle}" 
                               FontSize="28"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"/>

                        <Border StrokeShape="RoundRectangle 15" Stroke="{StaticResource Gray200}" BackgroundColor="{AppThemeBinding Light=White, Dark=#33FFFFFF}" HeightRequest="60">
                            <Grid ColumnDefinitions="55,Auto,*">
                                <Label Text="ðŸ“±" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>
                                <Label Grid.Column="1" Text="+998 " VerticalOptions="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}" Margin="0,0,5,0" FontAttributes="Bold" FontSize="16"/>
                                <Entry x:Name="PhoneEntry" 
                                       Grid.Column="2" 
                                       Placeholder="{x:Static lang:AppResources.PhonePlaceholder}" 
                                       Keyboard="Telephone" 
                                       MaxLength="12" 
                                       FontSize="16"
                                       VerticalOptions="Center" 
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       TextChanged="OnPhoneTextChanged"/>
                            </Grid>
                        </Border>

                        <Border StrokeShape="RoundRectangle 15" Stroke="{StaticResource Gray200}" BackgroundColor="{AppThemeBinding Light=White, Dark=#33FFFFFF}" HeightRequest="60">
                            <Grid ColumnDefinitions="55,*">
                                <Label Text="ðŸ”’" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>
                                <Entry x:Name="PasswordEntry" 
                                       Grid.Column="1" 
                                       Placeholder="{x:Static lang:AppResources.PasswordPlaceholder}" 
                                       IsPassword="True" 
                                       FontSize="16" 
                                       VerticalOptions="Center" 
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            </Grid>
                        </Border>

                        <Border x:Name="ConfirmBorder" IsVisible="False" Opacity="0" StrokeShape="RoundRectangle 15" Stroke="{StaticResource Gray200}" BackgroundColor="{AppThemeBinding Light=White, Dark=#33FFFFFF}" HeightRequest="60">
                            <Grid ColumnDefinitions="55,*">
                                <Label Text="ðŸ›¡ï¸" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20"/>
                                <Entry x:Name="ConfirmPasswordEntry" 
                                       Grid.Column="1" 
                                       Placeholder="{x:Static lang:AppResources.ConfirmPlaceholder}" 
                                       IsPassword="True" 
                                       FontSize="16" 
                                       VerticalOptions="Center" 
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            </Grid>
                        </Border>

                        <Button x:Name="SubmitBtn" 
                                Text="{x:Static lang:AppResources.LoginTitle}" 
                                HeightRequest="60"
                                CornerRadius="15"
                                FontSize="18"
                                FontAttributes="Bold"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                Margin="0,10,0,0"
                                Clicked="OnSubmitClicked">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Offset="0,5" Opacity="0.4" Radius="10"/>
                            </Button.Shadow>
                        </Button>

                        <Button x:Name="SwitchBtn" 
                                Text="{x:Static lang:AppResources.SwitchToRegister}" 
                                FontSize="14"
                                BackgroundColor="Transparent" 
                                TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray200}}" 
                                Clicked="OnSwitchModeClicked"/>

                        <ActivityIndicator x:Name="Loader" IsRunning="False" IsVisible="False" Color="{StaticResource Primary}" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>