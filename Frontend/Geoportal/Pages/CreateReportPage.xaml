<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:Geoportal.Resources.Languages"
             x:Class="Geoportal.Pages.CreateReportPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent">

    <Grid>
        <BoxView HorizontalOptions="Fill" VerticalOptions="Fill">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0A56C4" Offset="0.1" />
                    <GradientStop Color="#3AB0C2" Offset="0.5" />
                    <GradientStop Color="#3FE543" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView Padding="20,10,20,20">
            <VerticalStackLayout Spacing="15">

                <Grid ColumnDefinitions="50, *" Margin="0,20,0,10">
                    <Label Grid.Column="0" Text="â†" TextColor="White" FontSize="28" FontAttributes="Bold" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBackTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="1" Text="{x:Static res:AppResources.ReportTitle}" TextColor="White" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" Margin="-50,0,0,0"/>
                </Grid>

                <Border StrokeShape="RoundRectangle 20" BackgroundColor="#E6FFFFFF" StrokeThickness="2" StrokeDashArray="5,5" Stroke="#0A56C4" Padding="20" HeightRequest="150">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="+" FontSize="40" TextColor="#0A56C4" HorizontalOptions="Center" FontAttributes="Bold"/>
                        <Label Text="{x:Static res:AppResources.AddPhoto}" TextColor="#4B5563" FontSize="14" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddPhotoTapped" />
                    </Border.GestureRecognizers>
                </Border>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#E6FFFFFF" StrokeThickness="0" Padding="15,0">
                    <Picker Title="{x:Static res:AppResources.SelectRegion}" TextColor="Black" TitleColor="#6B7280" />
                </Border>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#E6FFFFFF" StrokeThickness="0" Padding="15,0">
                    <Picker Title="{x:Static res:AppResources.SelectDistrict}" TextColor="Black" TitleColor="#6B7280" />
                </Border>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#E6FFFFFF" StrokeThickness="0" Padding="15,0">
                    <Entry Placeholder="{x:Static res:AppResources.InfraName}" TextColor="Black" PlaceholderColor="#6B7280" BackgroundColor="Transparent" />
                </Border>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#E6FFFFFF" StrokeThickness="0" Padding="15,0">
                    <Picker Title="{x:Static res:AppResources.SelectSector}" TextColor="Black" TitleColor="#6B7280" />
                </Border>

                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#E6FFFFFF" StrokeThickness="0" Padding="15,10">
                    <Editor Placeholder="{x:Static res:AppResources.AddComment}" TextColor="Black" PlaceholderColor="#6B7280" BackgroundColor="Transparent" HeightRequest="100" AutoSize="TextChanges" />
                </Border>

                <Button Text="{x:Static res:AppResources.Submit}" 
                        BackgroundColor="#0A56C4" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        CornerRadius="25" 
                        HeightRequest="55" 
                        Margin="0,10,0,20">
                    <Button.Shadow>
                        <Shadow Brush="Black" Offset="0,10" Opacity="0.3" Radius="20"/>
                    </Button.Shadow>
                </Button>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>