<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:Geoportal.Resources.Languages"
             x:Class="Geoportal.Pages.SettingsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent"
             SafeAreaEdges="None">

    <Grid SafeAreaEdges="None">
        <BoxView HorizontalOptions="Fill" VerticalOptions="Fill">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0A56C4" Offset="0.1" />
                    <GradientStop Color="#3AB0C2" Offset="0.5" />
                    <GradientStop Color="#3FE543" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <Grid SafeAreaEdges="None">
            <ScrollView x:Name="MainContent" Padding="20,40,20,20">
                <VerticalStackLayout x:Name="MainContainer" Spacing="20" HorizontalOptions="Center" MaximumWidthRequest="800">

                    <Label x:Name="SettingsTitle" Text="{x:Static res:AppResources.Settings}" TextColor="White" FontSize="28" FontAttributes="Bold" Margin="0,30,0,10" HorizontalOptions="Center"/>

                    <Border x:Name="ProfileCard" StrokeShape="RoundRectangle 20" BackgroundColor="#CCFFFFFF" Padding="20" StrokeThickness="0">
                        <HorizontalStackLayout Spacing="15">
                            <Border StrokeShape="RoundRectangle 30" HeightRequest="60" WidthRequest="60" BackgroundColor="#0A56C4">
                                <Label Text="ðŸ‘¤" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout VerticalOptions="Center">
                                <Label x:Name="UserPhoneLabel" Text="+998 90 123 45 67" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                                <Label Text="{x:Static res:AppResources.ActiveUser}" FontSize="12" TextColor="#6B7280"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <Border x:Name="ReportsCard" StrokeShape="RoundRectangle 20" BackgroundColor="#CCFFFFFF" Padding="20" StrokeThickness="0">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{x:Static res:AppResources.MyReports}" FontSize="14" TextColor="#4B5563"/>
                                <Label x:Name="ReportsCountLabel" Text="12" FontSize="24" FontAttributes="Bold" TextColor="#0A56C4"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="1" Text="â†’" BackgroundColor="#F3F4F6" TextColor="Black" CornerRadius="15" WidthRequest="50" HeightRequest="50" Clicked="OnViewReportsClickedAsync"/>
                        </Grid>
                    </Border>

                    <VerticalStackLayout x:Name="LangGroup" Spacing="10">
                        <Label Text="{x:Static res:AppResources.Language}" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="5,0,0,0"/>
                        <Border StrokeShape="RoundRectangle 20" BackgroundColor="#CCFFFFFF" Padding="10" StrokeThickness="0">
                            <VerticalStackLayout Spacing="5">
                                <Button Text="O'zbekcha" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start" Clicked="OnLangUzClickedAsync"/>
                                <BoxView HeightRequest="1" Color="#E5E7EB" Margin="10,0"/>
                                <Button Text="Ð ÑƒÑÑÐºÐ¸Ð¹" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start" Clicked="OnLangRuClickedAsync"/>
                                <BoxView HeightRequest="1" Color="#E5E7EB" Margin="10,0"/>
                                <Button Text="English" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start" Clicked="OnLangEnClickedAsync"/>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <Button x:Name="LogoutBtn"
                            Text="{x:Static res:AppResources.Logout}" 
                            BackgroundColor="#EF4444" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            CornerRadius="20" 
                            HeightRequest="50" 
                            Margin="0,20,0,0"
                            Clicked="OnLogoutClickedAsync"/>

                </VerticalStackLayout>
            </ScrollView>

            <Grid x:Name="LoadingOverlay" 
                  IsVisible="False" 
                  BackgroundColor="#CC000000" 
                  HorizontalOptions="Fill" 
                  VerticalOptions="Fill"
                  Opacity="0">
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                    <ActivityIndicator IsRunning="True" Color="White" Scale="2" />
                    <Label Text="{x:Static res:AppResources.Loading}" TextColor="White" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>