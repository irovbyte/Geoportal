<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:Geoportal.Resources.Languages"
             x:Class="Geoportal.Pages.SettingsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent">

    <Grid>
        <BoxView HorizontalOptions="Fill" VerticalOptions="Fill">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0A56C4" Offset="0.1" />
                    <GradientStop Color="#3AB0C2" Offset="0.5" />
                    <GradientStop Color="#3FE543" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView Padding="20">
            <VerticalStackLayout Spacing="20">

                <Label Text="{x:Static res:AppResources.Settings}" TextColor="White" FontSize="28" FontAttributes="Bold" Margin="0,30,0,10" HorizontalOptions="Center"/>

                <Border StrokeShape="RoundRectangle 20" BackgroundColor="#CCFFFFFF" Padding="20" StrokeThickness="0">
                    <HorizontalStackLayout Spacing="15">
                        <Border StrokeShape="RoundRectangle 30" HeightRequest="60" WidthRequest="60" BackgroundColor="#0A56C4">
                            <Label Text="ðŸ‘¤" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label x:Name="UserPhoneLabel" Text="+998 90 123 45 67" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                            <Label Text="{x:Static res:AppResources.ActiveUser}" FontSize="12" TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>

                <Border StrokeShape="RoundRectangle 20" BackgroundColor="#CCFFFFFF" Padding="20" StrokeThickness="0">
                    <Grid ColumnDefinitions="*, Auto">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="{x:Static res:AppResources.MyReports}" FontSize="14" TextColor="#4B5563"/>
                            <Label x:Name="ReportsCountLabel" Text="12" FontSize="24" FontAttributes="Bold" TextColor="#0A56C4"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="1" Text="â†’" BackgroundColor="#F3F4F6" TextColor="Black" CornerRadius="15" WidthRequest="50" HeightRequest="50" Clicked="OnViewReportsClicked"/>
                    </Grid>
                </Border>

                <Label Text="{x:Static res:AppResources.Language}" TextColor="White" FontSize="18" FontAttributes="Bold" Margin="5,10,0,0"/>
                <Border StrokeShape="RoundRectangle 20" BackgroundColor="#CCFFFFFF" Padding="10" StrokeThickness="0">
                    <VerticalStackLayout Spacing="5">
                        <Button Text="O'zbekcha" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start" Clicked="OnLangUzClicked"/>
                        <BoxView HeightRequest="1" Color="#E5E7EB" Margin="10,0"/>
                        <Button Text="Ð ÑƒÑÑÐºÐ¸Ð¹" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start" Clicked="OnLangRuClicked"/>
                        <BoxView HeightRequest="1" Color="#E5E7EB" Margin="10,0"/>
                        <Button Text="English" BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Start" Clicked="OnLangEnClicked"/>
                    </VerticalStackLayout>
                </Border>

                <Button Text="{x:Static res:AppResources.Logout}" 
                        BackgroundColor="#EF4444" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        CornerRadius="20" 
                        HeightRequest="50" 
                        Margin="0,20,0,0"
                        Clicked="OnLogoutClicked"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>