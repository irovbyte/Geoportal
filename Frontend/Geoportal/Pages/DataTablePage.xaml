<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:Geoportal.Resources.Languages"
             x:Class="Geoportal.Pages.DataTablePage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent"
             SafeAreaEdges="None">

    <Grid SafeAreaEdges="None">
        <BoxView HorizontalOptions="Fill" VerticalOptions="Fill">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0A56C4" Offset="0.1" />
                    <GradientStop Color="#3AB0C2" Offset="0.5" />
                    <GradientStop Color="#3FE543" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView Padding="20,40,20,20">
            <VerticalStackLayout x:Name="MainContainer" 
                                 Spacing="25" 
                                 MaximumWidthRequest="1200" 
                                 HorizontalOptions="Center">

                <Label Text="{x:Static res:AppResources.Data}" 
                       TextColor="White" 
                       FontSize="30" 
                       FontAttributes="Bold" 
                       Margin="10,10,0,0"/>

                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="12">
                        <Button Text="{x:Static res:AppResources.Data}" BackgroundColor="White" TextColor="#0A56C4" CornerRadius="20" HeightRequest="45" FontAttributes="Bold" Padding="25,0"/>
                        <Button Text="{x:Static res:AppResources.Graphics}" BackgroundColor="#40FFFFFF" TextColor="White" CornerRadius="20" HeightRequest="45" Padding="25,0"/>
                        <Button Text="{x:Static res:AppResources.Map}" BackgroundColor="#40FFFFFF" TextColor="White" CornerRadius="20" HeightRequest="45" Padding="25,0"/>
                    </HorizontalStackLayout>
                </ScrollView>

                <Border StrokeShape="RoundRectangle 25" 
                        BackgroundColor="#E6F0FDF4" 
                        StrokeThickness="0" 
                        Padding="0,15">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,10" Opacity="0.2" Radius="20"/>
                    </Border.Shadow>

                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Always">
                        <VerticalStackLayout Spacing="0" Padding="20,0" x:Name="TableContent">

                            <Grid ColumnDefinitions="100, 80, 100, 100, 140, 100, 160, 160" ColumnSpacing="15" Padding="0,10">
                                <Label Grid.Column="0" Text="{x:Static res:AppResources.ProjectName}" FontAttributes="Bold" FontSize="13" TextColor="#4B5563"/>
                                <Label Grid.Column="1" Text="{x:Static res:AppResources.Year}" FontAttributes="Bold" FontSize="13" TextColor="#4B5563"/>
                                <Label Grid.Column="2" Text="{x:Static res:AppResources.Sector}" FontAttributes="Bold" FontSize="13" TextColor="#4B5563"/>
                                <Label Grid.Column="6" Text="{x:Static res:AppResources.SpentAmount}" FontAttributes="Bold" FontSize="13" TextColor="#4B5563"/>
                                <Label Grid.Column="7" Text="{x:Static res:AppResources.AllocatedAmount}" FontAttributes="Bold" FontSize="13" TextColor="#4B5563"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="#D1D5DB" Margin="0,5"/>

                            <VerticalStackLayout x:Name="RowsContainer">
                                <Grid ColumnDefinitions="100, 80, 100, 100, 140, 100, 160, 160" ColumnSpacing="15" Padding="0,15">
                                    <Label Grid.Column="0" Text="15778" FontSize="13" TextColor="Black" FontAttributes="Bold"/>
                                    <Label Grid.Column="1" Text="2020" FontSize="13" TextColor="#374151"/>
                                    <Label Grid.Column="2" Text="Yo'l" FontSize="13" TextColor="#374151"/>
                                    <Label Grid.Column="6" Text="35 998 894 418" FontSize="13" TextColor="#DC2626" FontAttributes="Bold"/>
                                    <Label Grid.Column="7" Text="12 261 018 000" FontSize="13" TextColor="#16A34A" FontAttributes="Bold"/>
                                </Grid>
                                <BoxView HeightRequest="1" Color="#F3F4F6"/>

                                <Grid ColumnDefinitions="100, 80, 100, 100, 140, 100, 160, 160" ColumnSpacing="15" Padding="0,15">
                                    <Label Grid.Column="0" Text="15779" FontSize="13" TextColor="Black" FontAttributes="Bold"/>
                                    <Label Grid.Column="1" Text="2021" FontSize="13" TextColor="#374151"/>
                                    <Label Grid.Column="2" Text="Suv" FontSize="13" TextColor="#374151"/>
                                    <Label Grid.Column="6" Text="14 500 000 000" FontSize="13" TextColor="#DC2626" FontAttributes="Bold"/>
                                    <Label Grid.Column="7" Text="20 000 000 000" FontSize="13" TextColor="#16A34A" FontAttributes="Bold"/>
                                </Grid>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </ScrollView>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>