<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:Geoportal.Resources.Languages"
             x:Class="Geoportal.Pages.DataTablePage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent"
             SafeAreaEdges="None">

    <Grid SafeAreaEdges="None">
        <BoxView HorizontalOptions="Fill" VerticalOptions="Fill">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0A56C4" Offset="0.1" />
                    <GradientStop Color="#3AB0C2" Offset="0.5" />
                    <GradientStop Color="#3FE543" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView Padding="20,40,20,20">
            <VerticalStackLayout Spacing="20">

                <Grid ColumnDefinitions="50, *" Margin="0,20,0,0">
                    <Label Grid.Column="0" Text="â†" TextColor="White" FontSize="28" FontAttributes="Bold" VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBackTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="1" Text="{x:Static res:AppResources.Data}" TextColor="White" FontSize="22" FontAttributes="Bold" VerticalOptions="Center" Margin="-20,0,0,0"/>
                </Grid>

                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="{x:Static res:AppResources.Data}" BackgroundColor="White" TextColor="Black" CornerRadius="20" HeightRequest="40" FontAttributes="Bold" Padding="20,0"/>
                        <Button Text="{x:Static res:AppResources.Graphics}" BackgroundColor="#CCFFFFFF" TextColor="Black" CornerRadius="20" HeightRequest="40" Padding="20,0"/>
                        <Button Text="{x:Static res:AppResources.Compare}" BackgroundColor="#CCFFFFFF" TextColor="Black" CornerRadius="20" HeightRequest="40" Padding="20,0"/>
                        <Button Text="{x:Static res:AppResources.Map}" BackgroundColor="#CCFFFFFF" TextColor="Black" CornerRadius="20" HeightRequest="40" Padding="20,0"/>
                    </HorizontalStackLayout>
                </ScrollView>

                <Border StrokeShape="RoundRectangle 20" BackgroundColor="#F0FDF4" StrokeThickness="0" Padding="0,10">
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                        <VerticalStackLayout Spacing="10" Padding="15,0">

                            <Grid ColumnDefinitions="100, 80, 80, 100, 120, 100, 150, 150" ColumnSpacing="10" Padding="0,5,0,10">
                                <Label Grid.Column="0" Text="{x:Static res:AppResources.ProjectName}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                                <Label Grid.Column="1" Text="{x:Static res:AppResources.Year}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                                <Label Grid.Column="2" Text="{x:Static res:AppResources.Sector}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                                <Label Grid.Column="3" Text="{x:Static res:AppResources.DonorType}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                                <Label Grid.Column="4" Text="{x:Static res:AppResources.DonorName}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                                <Label Grid.Column="5" Text="{x:Static res:AppResources.Region}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                                <Label Grid.Column="6" Text="{x:Static res:AppResources.SpentAmount}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                                <Label Grid.Column="7" Text="{x:Static res:AppResources.AllocatedAmount}" FontAttributes="Bold" FontSize="12" TextColor="#6B7280"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="#E5E7EB" Margin="0,-5,0,5"/>

                            <Grid ColumnDefinitions="100, 80, 80, 100, 120, 100, 150, 150" ColumnSpacing="10" Padding="0,10">
                                <Label Grid.Column="0" Text="15778" FontSize="12" TextColor="Black" FontAttributes="Bold"/>
                                <Label Grid.Column="1" Text="2020" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="2" Text="Yo'l" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="3" Text="Byudjet" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="4" Text="O'zR Davlat Byudjeti" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="5" Text="Jizzax" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="6" Text="35 998 894 418,05" FontSize="12" TextColor="#DC2626" FontAttributes="Bold"/>
                                <Label Grid.Column="7" Text="12 261 018 000,43" FontSize="12" TextColor="#16A34A" FontAttributes="Bold"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="#E5E7EB"/>

                            <Grid ColumnDefinitions="100, 80, 80, 100, 120, 100, 150, 150" ColumnSpacing="10" Padding="0,10">
                                <Label Grid.Column="0" Text="15779" FontSize="12" TextColor="Black" FontAttributes="Bold"/>
                                <Label Grid.Column="1" Text="2021" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="2" Text="Suv" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="3" Text="Kredit" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="4" Text="Jahon Banki" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="5" Text="Sirdaryo" FontSize="12" TextColor="Black"/>
                                <Label Grid.Column="6" Text="14 500 000 000,00" FontSize="12" TextColor="#DC2626" FontAttributes="Bold"/>
                                <Label Grid.Column="7" Text="20 000 000 000,00" FontSize="12" TextColor="#16A34A" FontAttributes="Bold"/>
                            </Grid>

                            <BoxView HeightRequest="1" Color="#E5E7EB"/>
                        </VerticalStackLayout>
                    </ScrollView>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>