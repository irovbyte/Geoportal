@page
@model Geoportal.Web.Pages.SchoolsModel
@{
    ViewData["Title"] = "Школы";
}
<div class="gp-card">
    <div class="gp-card-h d-flex align-items-center justify-content-between flex-wrap gap-2">
        <div>
            <h5 class="m-0">Школы</h5>
            <div class="text-muted small">Графики / Таблица / Карта (макет)</div>
        </div>
    </div>
    <div class="gp-card-b">
        <ul class="nav nav-pills gap-2" role="tablist">
            <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#sch-charts" type="button">Графики</button></li>
            <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#sch-table" type="button">Таблица</button></li>
            <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#sch-map" type="button">Карта</button></li>
        </ul>

        <div class="tab-content mt-3">
            <div class="tab-pane fade show active" id="sch-charts">
                <div class="row g-3">
                    <div class="col-12 col-lg-6"><div class="gp-card p-3"><div class="text-muted small">График 1</div><div class="mt-3" style="height:220px; border:1px dashed #d1d5db; border-radius:12px;"></div></div></div>
                    <div class="col-12 col-lg-6"><div class="gp-card p-3"><div class="text-muted small">График 2</div><div class="mt-3" style="height:220px; border:1px dashed #d1d5db; border-radius:12px;"></div></div></div>
                </div>
            </div>

            <div class="tab-pane fade" id="sch-table">
                <div class="table-responsive">
                    <table class="table table-sm align-middle">
                        <thead><tr><th>Школа</th><th>Район</th><th>Обращения</th><th>В работе</th><th>Закрыто</th></tr></thead>
                        <tbody>
                            <tr><td>Школа №12</td><td>Центральный</td><td>41</td><td>9</td><td>32</td></tr>
                            <tr><td>Школа №7</td><td>Северный</td><td>28</td><td>6</td><td>22</td></tr>
                            <tr><td>Школа №19</td><td>Южный</td><td>35</td><td>11</td><td>24</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="sch-map">
                <div class="gp-card p-3" style="height:420px; background: linear-gradient(135deg, #fff, #f3f4f6);">
                    <div class="text-muted small">Плейсхолдер карты школ</div>
                </div>
            </div>
        </div>
    </div>
</div>
