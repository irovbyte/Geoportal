@page
@model Geoportal.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Главная";
}

<div class="dashboard-grid">

    <!-- ===== MAIN KPI CARD ===== -->
    <div class="gp-card-grad">

        <h2 class="fw-bold">Мониторинг инфраструктуры</h2>
        <p class="opacity-75">
            Оперативные данные по региону на @DateTime.Now.ToString("dd.MM.yyyy")
        </p>

        <div class="kpi-container">

            <div class="kpi-card">
                <div class="kpi-title">Новых за сутки</div>
                <div class="kpi-value">128</div>
                <div class="kpi-delta pos">+12%</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-title">В работе</div>
                <div class="kpi-value">842</div>
                <div class="kpi-delta neg">-5%</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-title">Закрыто</div>
                <div class="kpi-value">5 319</div>
                <div class="kpi-delta pos">+8%</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-title">Среднее время</div>
                <div class="kpi-value">3.4 дня</div>
                <div class="kpi-delta neg">-3%</div>
            </div>

        </div>
    </div>


    <!-- ===== LOWER SECTION ===== -->
    <div class="lower-section">

        <!-- MAP CARD -->
        <div class="gp-card map-card">
            <div class="map-header">
                <h4>Интерактивная карта</h4>
                <span class="map-status">Online</span>
            </div>

            <div class="map-placeholder">
                <div class="map-placeholder-text">
                    Синхронизация с ГИС...
                </div>
            </div>
        </div>


        <!-- REPORTS CARD -->
        <div class="gp-card reports-card">
            <h4 class="mb-4">Последние обращения</h4>

            <div class="report-item">
                <div class="report-title">Проблема с отоплением</div>
                <div class="report-meta">Школа №42, Ташкент</div>
            </div>

            <div class="report-item">
                <div class="report-title">Ремонт завершен</div>
                <div class="report-meta">Школа №15, Самарканд</div>
            </div>

            <div class="report-item">
                <div class="report-title">Запрос оборудования</div>
                <div class="report-meta">Лицей №2, Бухара</div>
            </div>

            <button class="btn btn-primary w-100 mt-4">
                Смотреть все отчеты
            </button>
        </div>

    </div>

</div>