@{
    var title = ViewData["Title"] as string ?? "Geoportal";
}

<!DOCTYPE html>
<html lang="ru" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Geoportal</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

<header class="gp-header">

    <div class="gp-header-inner">

        <div class="gp-left">
            <img src="~/images/logo.png" class="gp-logo" />
            <span class="gp-brand">Geoportal</span>

            <!-- REGION -->
            <div class="dropdown">
                <button class="btn gp-dd-btn dropdown-toggle"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Регион: Не выбран
                </button>

                <ul class="dropdown-menu">
                    <li><button class="dropdown-item" data-region="Тошкент шаҳри">Ташкент</button></li>
                    <li><button class="dropdown-item" data-region="Андижон вилояти">Андижан</button></li>
                    <li><button class="dropdown-item" data-region="Бухоро вилояти">Бухара</button></li>
                    <li><button class="dropdown-item" data-region="Фарғона вилояти">Фергана</button></li>
                    <li><button class="dropdown-item" data-region="Жиззах вилояти">Джиззак</button></li>
                    <li><button class="dropdown-item" data-region="Хоразм вилояти">Харезм</button></li>
                    <li><button class="dropdown-item" data-region="Наманган вилояти">Наманган</button></li>
                    <li><button class="dropdown-item" data-region="Навоий вилояти">Наваи</button></li>
                    <li><button class="dropdown-item" data-region="Қашқадарё вилояти">Кашкадарья</button></li>
                    <li><button class="dropdown-item" data-region="Самарқанд вилояти">Самарканд</button></li>
                    <li><button class="dropdown-item" data-region="Сирдарё вилояти">Сырдарья</button></li>
                    <li><button class="dropdown-item" data-region="Сурхондарё вилояти">Сурхандарья</button></li>
                    <li><button class="dropdown-item" data-region="Қорақалпоғистон Р.">Каракалпакыстан</button></li>
                </ul>
            </div>
        </div>

        <div class="gp-right">

            <!-- LANGUAGE -->
            <div class="dropdown">
            <button class="btn gp-dd-btn dropdown-toggle"
                type="button"
                data-bs-toggle="dorpdown"
                aria-expanded="false">
            Язык
                <ul class="dropdown-content">
                    <li>Русский</li>
                    <li>O'zbek</li>
                    <li>English</li>
                </ul>
            </div>

            <!-- THEME -->
            <div class="dropdown">
                <button class="btn gp-dd-btn dropdown-toggle"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Тема
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><button class="dropdown-item" data-theme="system">Системная</button></li>
                    <li><button class="dropdown-item" data-theme="light">Светлая</button></li>
                    <li><button class="dropdown-item" data-theme="dark">Темная</button></li>
                </ul>
            </div>

            <a class="gp-login">Логин</a>
        </div>
    </div>

    <nav class="gp-nav">
        <a asp-page="/Index">Карта</a>
        <a asp-page="/Reports/New">Оставить сообщение</a>
        <a href="#">Данные</a>
        <a href="#">Инструменты</a>
        <a href="#">Сравнение</a>
        <a href="#">Школы</a>
    </nav>
</header>

<div class="gp-container">
    @RenderBody()
</div>

<footer class="gp-footer">
    © 2024 Geoportal
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
(function(){
    const html = document.documentElement;

    // region change
    document.querySelectorAll("[data-region]").forEach(btn=>{
        btn.addEventListener("click",()=>{
            document.getElementById("gpRegionBtn").textContent =
                "Регион: " + btn.getAttribute("data-region");
        });
    });

    // theme change
    document.querySelectorAll("[data-theme]").forEach(btn=>{
        btn.addEventListener("click",()=>{
            html.setAttribute("data-theme", btn.getAttribute("data-theme"));
        });
    });
})();
</script>

</body>
</html>